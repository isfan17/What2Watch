<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/viewBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/viewShare"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="312dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/viewTitle"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:id="@+id/viewQuote"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewTitle"
                    />

                <View
                    android:id="@+id/viewTop"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewQuote"
                    />

                <View
                    android:id="@+id/viewCategories"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewTop"
                    />

                <View
                    android:id="@+id/viewRating"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintEnd_toStartOf="@id/viewTime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewCategories"
                    />

                <View
                    android:id="@+id/viewTime"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintBottom_toBottomOf="@id/viewRating"
                    app:layout_constraintEnd_toStartOf="@id/viewDate"
                    app:layout_constraintStart_toEndOf="@id/viewRating"
                    app:layout_constraintTop_toTopOf="@id/viewRating"
                    />

                <View
                    android:id="@+id/viewDate"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintBottom_toBottomOf="@id/viewRating"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/viewTime"
                    app:layout_constraintTop_toTopOf="@id/viewRating"
                    />

                <View
                    android:id="@+id/viewBottom"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewRating"
                    />

                <View
                    android:id="@+id/viewOverviewTitle"
                    android:layout_width="72dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBottom"
                    />

                <LinearLayout
                    android:id="@+id/llOverview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewOverviewTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@drawable/bg_rounded_grey"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_rounded_grey"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_rounded_grey"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_rounded_grey"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_rounded_grey"
                        />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/viewPlayTrailer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_rounded_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewWatchlist"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:id="@+id/viewWatchlist"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_rounded_grey"
            app:layout_constraintStart_toEndOf="@id/viewPlayTrailer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>